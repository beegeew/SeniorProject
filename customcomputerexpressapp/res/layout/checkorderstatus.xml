<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|right"
    android:orientation="vertical" >

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.79" >

        <EditText
            android:id="@+id/cos_orderIdNumber"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_x="40dp"
            android:layout_y="170dp"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="44dp"
            android:layout_y="115dp"
            android:text="Please enter your order id:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp" />

        <Button
            android:id="@+id/cos_find"
            style="@style/ButtonText"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_x="4dp"
            android:layout_y="253dp"
            android:background="@drawable/ccebutton"
            android:text="Find Order" />

        <Button
            android:id="@+id/cos_main"
            style="@style/ButtonText"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_x="4dp"
            android:layout_y="313dp"
            android:background="@drawable/ccebutton"
            android:text="Return to Main Screen" />

        <TextView
            android:id="@+id/cos_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="45dp"
            android:layout_y="220dp"
            android:textColor="#FF0000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </AbsoluteLayout>

</LinearLayout>