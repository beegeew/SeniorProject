<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.63" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="131dp"
                android:layout_height="176dp"
                android:src="@drawable/case3" />

            <TextView
                android:id="@+id/textView1"
                style="@style/ButtonText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gaming Model
This system is a great gaming computer for the budget gamer and multimedia enthusiast."
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <Button
            android:id="@+id/pb3.purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart!  ($1473.89)" 
            android:background="@drawable/ccebutton" 
        	style="@style/ButtonText"/>

        <Button
            android:id="@+id/pb3.customize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Customize Computer" 
            android:background="@drawable/ccebutton" 
        	style="@style/ButtonText"/>
        <Button
            android:id="@+id/pb3.main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return to Main Screen" 
            android:background="@drawable/ccebutton" 
        	style="@style/ButtonText"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.63"
            android:text="Case: Antec Nine Hundred
CPU: Intel i5 3.3 GHz  Quad-core
Motherboard: ASUS
Memory: G.SKILL 8GB
Video Card: GTX 570 2560 MB
Hard Drive: 640GB 7200RPM
Solid State Drive: OCZ Vertex 2 60GB
CD/DVD Drive: Sony 18x DVD 48x CD
Cooling: Zalman CPU Cooler
Power Supply: Corsair 750W
Operating System: Windows 7 
Home Premium" />

    </LinearLayout>

</ScrollView>