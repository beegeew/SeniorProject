<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.96" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="12dp"
            android:layout_y="40dp"
            android:text="Please select a Power Supply:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioGroup
            android:id="@+id/custom10_rg"
            android:layout_width="wrap_content"
            android:layout_height="266dp"
            android:layout_x="20dp"
            android:layout_y="78dp" >

            <RadioButton
                android:id="@+id/cust10rad1"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Coolmax NW-650B 650W (+$54.99)"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/cust10rad2"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:text="OCZ ModXStream 700W (+$89.99)"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/cust10rad3"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:text="Corsair 750W (+$129.99)"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/cust10rad4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corsair 850TX 850W (+$149.99)"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/cust10rad5"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:text="PC Power and Cooling Turbo-Cool 1200W (+$449.99)"
                android:textSize="13dp" />

        </RadioGroup>

        <Button
            android:id="@+id/custom10.main"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="384dp"
            android:background="@drawable/ccebutton"
            android:text="Return to Cooler" />

        <Button
            android:id="@+id/custom10.next"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="340dp"
            android:background="@drawable/ccebutton"
            android:text="Next" />

        <Button
            android:id="@+id/custom10.help"
            style="@style/ButtonText"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_x="250dp"
            android:layout_y="6dp"
            android:background="@drawable/ccebutton"
            android:text="Help"
            android:textSize="10dp" />

        <Button
            android:id="@+id/cust10img2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="256dp"
            android:layout_y="131dp"
            android:background="@drawable/ccebutton"
            android:text="View" />

        <Button
            android:id="@+id/cust10img1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="256dp"
            android:layout_y="83dp"
            android:background="@drawable/ccebutton"
            android:text="View" />

        <Button
            android:id="@+id/cust10img3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="256dp"
            android:layout_y="180dp"
            android:background="@drawable/ccebutton"
            android:text="View" />

        <Button
            android:id="@+id/cust10img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="256dp"
            android:layout_y="229dp"
            android:background="@drawable/ccebutton"
            android:text="View" />

        <Button
            android:id="@+id/cust10img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="256dp"
            android:layout_y="276dp"
            android:background="@drawable/ccebutton"
            android:text="View" />

    </AbsoluteLayout>

</LinearLayout>